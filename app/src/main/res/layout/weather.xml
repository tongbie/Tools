<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.WeatherPackage.Weather">

    <include layout="@layout/backtitlelayout" />

    <ListView
        android:id="@+id/provenceListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/provence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxEms="1"
            android:maxLines="1" />

        <EditText
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxEms="1"
            android:maxLines="1" />

        <EditText
            android:id="@+id/area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxEms="1"
            android:maxLines="1" />
    </LinearLayout>


    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="查   询"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18dp"
        tools:pb_colorComplete="@color/green_complete"
        tools:pb_colorError="@color/red_error"
        tools:pb_colorPressed="#303e9f"
        tools:pb_colorProgress="@color/purple_progress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null"
        android:dividerHeight="15dp"
        android:scrollbarStyle="outsideOverlay"></ListView>
</LinearLayout>
